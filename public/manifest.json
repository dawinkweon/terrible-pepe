{
  "manifest_version": 3,
  "name": "Pepe The Helpie",
  "version": "0.1",
  "description": "Pepe Helps You!",
  "permissions": ["storage"],
  "background": {
    "service_worker": "static/js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["static/js/content.js"],
      "css": ["static/css/content.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "192": "logo192.png"
  },
  "action": {
    "default_icon": {
      "192": "logo192.png"
    },
    "default_title": "Popup",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
